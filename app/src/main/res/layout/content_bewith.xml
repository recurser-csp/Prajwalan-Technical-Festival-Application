<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/bgg"
    tools:showIn="@layout/app_bar_bewith" tools:context="com.example.nilesh1.prajjj.bewith">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="00dp"
        android:paddingTop="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"

            android:background="#faf7f9"
            android:orientation="vertical">
            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout_sign"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#6031e2"
                android:elevation="6dp"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/pager_sign"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/tab_layout_sign"
                android:background="#faf7f7"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
